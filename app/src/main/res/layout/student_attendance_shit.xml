<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    app:cardCornerRadius="20dp"
    android:padding="20dp"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:padding="26dp">


        <TextView
            android:id="@+id/text"
            android:layout_width="271dp"
            android:layout_height="23dp"
            android:layout_marginTop="16dp"
            android:text="Student Attendance"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/student_name"
            android:layout_width="271dp"
            android:layout_height="21dp"
            android:layout_marginTop="68dp"
            android:text="Name"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/student_matric"
            android:layout_width="271dp"
            android:layout_height="21dp"
            android:layout_marginTop="4dp"
            android:text="Matric Number"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/student_name" />

        <TextView
            android:id="@+id/student_email"
            android:layout_width="271dp"
            android:layout_height="21dp"
            android:text="Email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintTop_toBottomOf="@+id/student_matric" />


        <TextView
            android:id="@+id/student_phone"
            android:layout_width="271dp"
            android:layout_height="21dp"
            android:layout_marginTop="4dp"
            android:text="Phone Number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/student_email" />

        <TextView
            android:id="@+id/student_cate"
            android:layout_width="271dp"
            android:layout_height="21dp"
            android:layout_marginTop="24dp"
            android:text="category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/student_email" />

        <TextView
            android:id="@+id/class_attended"
            android:layout_width="271dp"
            android:layout_height="21dp"
            android:text="class attended"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/student_cate"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>